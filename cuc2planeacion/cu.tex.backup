%-------------------------------------- CU2 planeacion

  \begin{UseCase}{CUC2}{Planeación}{Muestra las acciones del proyecto y los presupuestos registrados para su gestión, así como la opción para enviar el proyecto para su aprobación.}
    \UCitem{Versión}{1.0}
    \UCitem{Actor(es)}{Coordinador.}
    \UCitem{Propósito}{Gestionar las acciones y los presupuestos del proyecto y/o enviar proyecto para revisión.}
    \UCitem{Resumen}{Agrupa las funcionalidades de gestión de información de planeación de un proyecto.}
    \UCitem{Entradas}{Ninguna.}
    \UCitem{Salidas}{Ninguna}
    \UCitem{Precondiciones}{
	\begin{itemize}
	 	\item Haber pasado por el \UCref{CU2.1} con perfil coordinador.
	 	\item Que el proyecto este en estado de edición.
	\end{itemize}
	}
    \UCitem{Postcondiciones}{Ninguna.}
    \UCitem{Autor}{Pedro Hernandez}
    \UCitem{Referencias}{}
    \UCitem{Tipo}{Secundario. Viene del caso de uso \UCref{CU2.1}}
    \UCitem{Módulo}{Coordinación}
  \end{UseCase}

  \begin{UCtrayectoria}{Principal}
    \UCpaso[\UCactor] Selecciona la opción \IUbutton{Planeación} de la pantalla \IUref{IUMenuCoordinador}{Revisar proyecto}.
    \UCpaso Busca las acciones y presupuestos registrados del proyecto.
    \UCpaso Calcula los presupuestos disponibles del proyecto. \BRref{RN82}  %TODO RN y DD de presupuesto disponible
    \UCpaso Muestra la pantalla \IUref{Planeación}{Planeación} donde se despliegan los nombres de las acciones, así como su duración en un diagrama de GANTT. También los datos de solicitud \ref{dd:DEPresupuestos}, dictamen \ref{dd:DSPresupuestos} y ejercicio de cada presupuesto.
  \end{UCtrayectoria}

